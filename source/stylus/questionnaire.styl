// @import "components/variables"
.content-wrapper
	max-width 1328px
	padding 0 40px
	margin 0 auto
	&--vh
		height 100%
	@media screen and (max-width: 1023px)
		padding 0 20px
	@media screen and (max-width: 767px)
		padding 0 15px /*17*/
a, button, input[type="submit"], input[type="button"], input[type="reset"], label
	border none medium
	outline none
	cursor pointer
	background none
	-webkit-text-decoration-skip objects
	padding: 0

html, body
	font-family 'museocyrl300',Helvetica,Arial,sans-serif
	font-size 16px
	line-height 1.5
	background #fff
	color $baseFont
html
	-ms-text-size-adjust: 100%;
	-webkit-text-size-adjust: 100%;
body
	margin: 0
	padding: 0

*, *:focus, *:after, *:before
	-webkit-tap-highlight-color rgba(0, 0, 0, 0)
	-moz-box-sizing border-box
	box-sizing border-box
	outline none


input, textarea
	font-family 'museocyrl300',Helvetica,Arial,sans-serif
	font-size 14px
	background none
	border none medium
	resize none
	box-shadow none
	color #DAD0C7
	outline: none
	&::placeholder
		font-family 'museocyrl300',Helvetica,Arial,sans-serif
		color #DAD0C7
		text-overflow ellipsis
input:-webkit-autofill,
input:-webkit-autofill:hover,
input:-webkit-autofill:focus,
input:-webkit-autofill:active
	-webkit-box-shadow: 0 0 0 30px white inset !important;
article,aside,footer,header,nav,section,canvas
	display block

.q-block
	position: relative
	margin: 0 -50px 35px
	@media screen and (max-width: 1023px)
		margin: 0 -20px 35px
	@media screen and (max-width: 767px)
		margin: 0 -15px 35px

	&:after
		content: ''
		width: 100%
		height: 2px
		display: block
		background #D6D6D6
		margin: 35px 0
.q-page
	&-head
		&__bg
			background: #F5EFED
			margin-bottom 40px
		&__img
			text-align: center
			padding-top 20px
		&__title
			font-size: 24px
			line-height: 30px
			font-weight 700
			margin-bottom 28px
		&__text
			font-size: 14px
			line-height: 24px
			a
				color: #689F38
				text-decoration: underline
				margin-right 0.3em
			span
				color: #689F38
	&-body		
		&__offer
			display: flex
			justify-content: center
			@media screen and (max-width: 500px)
				justify-content: space-between
			&-item
				// flex: 0 0 50%
				// max-width: 50%
				text-align: center
				padding: 0 100px
				@media screen and (max-width: 768px)
					padding: 0 50px
				@media screen and (max-width: 500px)
					padding: 0
					flex: 0 0 50%
					max-width: 50%
			&-img
				height: 55px
				margin-bottom 18px
			&-text
				font-size: 14px
				font-weight 700
				span
					font-weight 500
		&-form
			&__title
				font-size: 18px
				line-height: 22px
				font-weight 700
				color: #000
				margin-bottom 32px
			&__label
				position: relative

			&__input
				width: 100%
				letter-spacing -1.5%
				font-size: 14px
				line-height: 34px
				color: #000
				border-bottom: 1px solid rgba(0, 0, 0, 0.4)
				margin-bottom 20px
				&::placeholder
					color: rgba(black, 0.6)

			&__info
				position: relative
				font-size: 12px
				line-height: 18px
				color: #000
				padding-left 24px
				&::before
					content: '!'
					position: absolute
					left: 0
					top: 0
					width: 13px
					height: 13px
					background: #689F38
					border-radius: 50%
					color white
					text-align: center
					line-height: 14px
					font-size: 10px
			&__btn
				display: flex
				align-items: center
				margin-bottom 23px
				button
					font-size: 25px
					font-weight 700
					color: #689F38
					margin-right 0.2em
				span
					color: #689F38
					font-size: 14px
					margin-bottom 2px
		&-consent
			&__title
				font-size: 14px
				color: #000
			&__check-box
				display: flex
				align-items: center
			&__label
				display: flex
				align-items: center
				margin-right 50px
				margin-top 20px
				font-size: 14px
				color: #000
			&__input
				appearance: none
				-webkit-appearance: none
				-moz-appearance: none
				width: 1px
				height: 1px
				position: absolute
			&__checked
				width: 18px
				height: 18px
				border-radius: 2px
				border: 1px solid rgba(0, 0, 0, 0.2)
				display: block
				margin-right 10px
			&__input:checked + &__checked
				position: relative
				&::after
					content: ''
					width: 13px
					height: 7px
					border-left: solid 1px #689F38
					border-bottom: solid 1px #689F38
					transform: rotate(-55deg)
					display: block
					position: absolute
					top: 1px
					left: 1px
			&__btn
				margin-top 40px
				button
					color: white
					background: #689F38
					width: 100%
					border-radius: 2px
					font-size: 16px
					padding: 16px 0
			&__row
				font-size: 14px
				line-height: 26px
				margin-top 25px
				padding-bottom 10px
	&-footer
		&__title
			font-size: 18px
			font-weight 700
			line-height: 22px
			padding-top 7px
			padding-bottom 24px
		&__text
			font-size: 14px
			line-height: 24px
			padding-bottom 30px
		&__link
			display: flex
			align-items: center
			margin-bottom 30px
			@media screen and (max-width: 374px)
				justify-content: space-between
			div
				margin-right 14px
				@media screen and (max-width: 374px)
					margin: 0
.q-page__error
	position: absolute
	left: 0
	top: -1.5em
	font-size: 12px
	color: #FF736A
	white-space: nowrap
.q-input__error
	background: url('../img/questionnaire/icon-error.svg') no-repeat
	background-position: top 50% right

//-----------popup---------------//
.q-popup
	position: fixed
	z-index 555
	width: 300px
	left: 50%
	top: 50%
	transform: translate(-50%, -50%)
	background: white
	.q-page-head__bg
		margin-bottom 0
	&-overlay
		background: rgba(black, 0.5)
		position: absolute
		top: 0
		right: 0
		left: 0
		bottom: 0
		margin: auto
		z-index 150
	&-body
		padding: 90px 0 120px
		text-align: center
		&__row
			color: #689F38
			font-size: 14px
			margin-bottom 28px
		&__welcome
			font-size: 24px
			font-weight 700
			line-height: 30px
.q-page
	.datepicker--cell.-selected-
		background: red
.q-error
	background: #ff736a
	padding: 15px 10px
	color: #fff
	&__text
		position: relative
		display: flex
		padding-left 1.2em
		align-items: center
		&:before
			position: absolute
			left: 0
			content: ''
			width: 1em
			height: 1em
			border-radius: 50%
			display: block
			text-align: center
			line-height: 1em
			font-size: 0.8em
			background-image: url('../img/ico-attention.svg')
			background-position: 50% 50%
			background-repeat: no-repeat
			background-size: 30%
			background-color: #fff
			top: 50%
			transform: translateY(-55%)
