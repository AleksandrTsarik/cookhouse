.b-carousel
	&__wrapper
		background $grey
		//height 520px
		@media $phone
			height auto
	&__slide
		position relative
		//background none no-repeat center center $baseFont
		//background-size cover
		font-size 0
		line-height 1
		color $backFont
		@media $phone
			//background none !important
			/*padding-top 262px
			background-size cover
			background-position 70% 0*/
	&__slide-wrapper
		position absolute
		left 0
		right 0
		top 0
		bottom 0
		z-index 3
	&__image
		width 100%
		@media $phone
			display none !important
	&__image-mobile
		width 100%
		display none !important
		@media $phone
			display block !important
	&__title
		font-family $MuseocyrR /*$ClarendonR*/
		font-size 56px /*52*/
		line-height 1.2
		color $backFont
		padding-bottom 26px
		@media $tablet
			font-size: 40px
		@media $phone
			font-size: 20px
		@media $phone
			font-size 24px
			padding-bottom 17px
	&__desc
		font-family $MuseoR
		font-size 16px
		line-height 1.5
		color $white
		max-width 420px
		@media $phone
			font-size 14px
			line-height 1.43
			max-height 63px
			overflow hidden
			max-width none
	&__button
		display inline-block
		vertical-align top
		text-align center
		border 1px solid $backFont
		border-radius 3px
		font-family $MuseoR
		font-size 16px
		line-height 40px
		min-width 160px
		padding 0 20px
		height 40px
		color $white
		cursor pointer
		margin-bottom 4%
		margin-top 10px
		transition color 0.2s, background 0.2s
		@media $phone
			margin-bottom 10px
			font-size 14px
			line-height 36px
			min-width 140px
			height 36px
			//display none
		&:hover
			background $backFont
			color $black
	&__layout
		padding 20px 25px 60px
		display flex
		flex-direction column
		//justify-content flex-end
		justify-content: center
		align-items flex-start
		height 100%
		@media $tablet
			padding 19px 15px 51px
			margin 0 -15px
			//background none !important
		@media $phone
			//background none no-repeat center center
			//background-size cover
			//background $baseFont
			padding 19px 15px 51px
			margin 0 -15px
			//min-height 380px
		&&-dark-style ^[0]__title
		&&-dark-style ^[0]__desc
			color $baseFont
		&&-dark-style ^[0]__button
			background $baseFont
			&:hover
				color $white

	& .slick-dots
		position absolute
		bottom 51px
		left 50%
		transform translateX(-50%)
		max-width 1328px
		width 100%
		padding 0 65px
		display flex
		@media $tablet
			padding 0 45px
		@media $phone
			left 19px
			padding 0
			transform translateX(0)
			width auto
			bottom 26px
	& .slick-dots li
		background $baseFont
		width 86px
		font-size 0
		line-height 1
		@media $phone
			position relative
			background $white
			border-radius 50%
			width 5px
			height 5px
			margin-right 18px
		&.slick-active
			background $backBackground
			@media $phone
				background transparent
				&:after
					content ''
					position absolute
					left -2px
					top -2px
					width 10px
					height 10px
					background $hoverFont
					border-radius 50%
	& .slick-dots button
		font-size 0
		line-height 1
		width 100%
		height 3px
		@media $phone
			width 100%
			height 100%



