.b-basket
	&__wrapper
		padding 10px 0 120px
		@media $tablet
			padding-bottom 75px
	&__row
		display flex
		justify-content space-between
		@media $tablet
			flex-direction column
	&__column
		width 66%
		@media $desktop
			width 59%
		@media $tablet
			width 100%
		&:nth-child(2)
			width 30.8%
			@media $desktop
				width 37%
			@media $tablet
				width 100%
	&__controls
		display flex
		align-items center
		margin-top 54px
		@media $tablet
			display none
	&__button
		width 320px
		margin-right 55px
	&__back
		text-decoration underline
		color $specsOrange
		&:hover
			text-decoration none
			color $hoverFont

.b-basket-result
	@media $tablet
		padding-top 60px
	&__wrapper
		background $sub
		padding 37px 32px
		@media $tablet
			display flex
			align-items flex-end
			flex-direction column
		@media $phone
			display block
			padding 20px 15px
	&__table
		display table
		width 100%
		padding-bottom 12px
	&__row
		display table-row
	&__column
		display table-cell
		padding-bottom 22px
		&:nth-child(1)
			width 80%
			@media $tablet
				width (84.6% + 32px)
	&__subtitle, &__subtitle-desc
		font-family $MuseoM
		font-size 16px
		line-height 1.31
		letter-spacing -0.015em
	&__subtitle-desc
		color $specsOrange
		white-space nowrap
		padding-right 5px
	&__title
		font-family $MuseoR
		font-weight bold
		font-size 20px
		line-height 1
		letter-spacing -0.015em
		padding-right 5px
		@media $phone
			font-size 18px
		span
			font-size 16px
			font-weight normal
			display block
			padding-top 4px
	&__title-desc
		font-family $MuseoR
		font-weight bold
		font-size 20px
		line-height 1
		letter-spacing -0.015em
		white-space nowrap
		padding-right 5px
		@media $phone
			font-size 18px
	&__promo-zone
		padding-bottom 35px
		@media $tablet
			width 100%
	&__button
		@media $tablet
			align-self flex-end
			min-width 300px
		@media $phone
			min-width 0

.b-promo-field
	margin 12px 0
	a
		display: block
	&__wrapper
		position relative
		border 1px solid $subBorder
		padding 0 42px 0 12px
		background: #fff

	&__input
		width 100%
		line-height 42px
		height 42px
		font-size 13px
		letter-spacing -0.015em
		&::placeholder
			color darken($subColor, 35%)
	&__button
		position absolute
		right 0
		top 0
		width 42px
		height 42px
		cursor pointer
		&:before
			content ''
			position absolute
			left 13px
			top 20px
			width 18px
			height 2px
			background $hoverFont
			@media $phoneS
				top 20px
				width 18px
				height 3px
		&:after
			content ''
			position absolute
			left 26px
			top 18px
			width 6px
			height 6px
			border-right 2px solid $hoverFont
			border-bottom 2px solid $hoverFont
			transform rotate(-45deg)
			@media $phoneS
				top 18px
				width 7px
				height 7px
				border-right 3px solid $hoverFont
				border-bottom 3px solid $hoverFont
	&__label
		font-size 13px
		line-height 1.5
		letter-spacing -0.015em
		margin-top 12px
		a
			display: block

.b-basket-list
	&__empty
		display none
		font-size 16px
		padding 5px
		&.is-show
			display block



